{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-banner" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form id="form-banner" action="{{ save }}" method="POST" data-oc-toggle="ajax">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
            <div class="col-sm-10">
              <div class="form-check form-switch form-switch-lg">
                <input type="hidden" name="module_mobile_app_banner_status" value="0"/>
                <input type="checkbox" name="module_mobile_app_banner_status" value="1" id="input-status" class="form-check-input"{% if module_mobile_app_banner_status %} checked{% endif %}/>
              </div>
            </div>
          </div>
          <br/>
          <ul class="nav nav-tabs">
            <li class="nav-item"><a href="#banner-tab" data-bs-toggle="tab" class="nav-link active">{{ heading_title }}</a></li>
          </ul>
          <div class="tab-content">
            {% set image_row = 0 %}
            <div id="banner-tab" class="tab-pane active">
              <table id="image-table" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th class="required">{{ entry_title }}</th>
                    <th>{{ entry_link }}</th>
                    <th class="text-center">{{ entry_image }}</th>
                    <th class="text-end">{{ entry_sort_order }}</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  {% if banner_images %}
                    {% for banner_image in banner_images %}
                      <tr id="image-row-{{ image_row }}">
                        <td>
                          <input type="text" name="module_mobile_app_banner_image[{{ image_row }}][title]" value="{{ banner_image.title }}" placeholder="{{ entry_title }}" id="input-image-{{ image_row }}-title" class="form-control"/>
                          <div id="error-image-{{ image_row }}-title" class="invalid-feedback"></div>
                        </td>
                        <td style="width: 30%;">
                          <div class="mb-2">
                            <select name="module_mobile_app_banner_image[{{ image_row }}][link_type]" id="input-image-{{ image_row }}-link-type" class="form-select">
                              <option value="external"{% if banner_image.link_type == 'external' or not banner_image.link_type %} selected{% endif %}>{{ text_link_external }}</option>
                              <option value="product"{% if banner_image.link_type == 'product' %} selected{% endif %}>{{ text_link_product }}</option>
                              <option value="category"{% if banner_image.link_type == 'category' %} selected{% endif %}>{{ text_link_category }}</option>
                            </select>
                          </div>

                          <div class="mb-2 link-input link-input-external-{{ image_row }}" {% if banner_image.link_type and banner_image.link_type != 'external' %}style="display:none;"{% endif %}>
                            <input type="text" name="module_mobile_app_banner_image[{{ image_row }}][link]" value="{{ banner_image.link }}" placeholder="{{ entry_link }}" id="input-image-{{ image_row }}-link" class="form-control"/>
                          </div>

                          <div class="mb-2 link-input link-input-product-{{ image_row }}" {% if banner_image.link_type != 'product' %}style="display:none;"{% endif %}>
                            <input type="hidden" name="module_mobile_app_banner_image[{{ image_row }}][product_id]" value="{{ banner_image.product_id }}" id="input-image-{{ image_row }}-product-id"/>
                            <input type="text" id="input-image-{{ image_row }}-product" value="{{ banner_image.product_name }}" data-oc-target="autocomplete-product-{{ image_row }}" class="form-control" placeholder="{{ entry_product }}" autocomplete="off" style="padding:6px 10px;"/>
                            <ul id="autocomplete-product-{{ image_row }}" class="dropdown-menu"></ul>
                          </div>

                          <div class="mb-2 link-input link-input-category-{{ image_row }}" {% if banner_image.link_type != 'category' %}style="display:none;"{% endif %}>
                            <input type="hidden" name="module_mobile_app_banner_image[{{ image_row }}][category_id]" value="{{ banner_image.category_id }}" id="input-image-{{ image_row }}-category-id"/>
                            <input type="text" id="input-image-{{ image_row }}-category" value="{{ banner_image.category_name }}" data-oc-target="autocomplete-category-{{ image_row }}" class="form-control" placeholder="{{ entry_category }}" autocomplete="off" style="padding:6px 10px;"/>
                            <ul id="autocomplete-category-{{ image_row }}" class="dropdown-menu"></ul>
                          </div>

                        </td>
                        <td class="text-center">
                          <div class="border rounded d-block" style="max-width: 300px;">
                            <img src="{{ banner_image.thumb }}" alt="" title="" id="thumb-image-{{ image_row }}" data-oc-placeholder="{{ placeholder }}" class="img-fluid"/>
                            <input type="hidden" name="module_mobile_app_banner_image[{{ image_row }}][image]" value="{{ banner_image.image }}" id="input-image-{{ image_row }}-image"/>
                            <div class="d-grid">
                              <button type="button" data-oc-toggle="image" data-oc-target="#input-image-{{ image_row }}-image" data-oc-thumb="#thumb-image-{{ image_row }}" class="btn btn-primary rounded-0"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
                              <button type="button" data-oc-toggle="clear" data-oc-target="#input-image-{{ image_row }}-image" data-oc-thumb="#thumb-image-{{ image_row }}" class="btn btn-warning rounded-0"><i class="fa-regular fa-trash-can"></i> {{ button_clear }}</button>
                            </div>
                          </div></td>
                        <td class="text-end" style="width: 10%;"><input type="text" name="module_mobile_app_banner_image[{{ image_row }}][sort_order]" value="{{ banner_image.sort_order }}" placeholder="{{ entry_sort_order }}" id="input-image-{{ image_row }}-sort-order" class="form-control"/></td>
                        <td class="text-end"><button type="button" onclick="$('#image-row-{{ image_row }}').remove();" data-bs-toggle="tooltip" title="{{ button_remove|escape('js') }}" class="btn btn-danger"><i class="fa-solid fa-minus-circle"></i></button></td>
                      </tr>
                      {% set image_row = image_row + 1 %}
                    {% endfor %}
                  {% endif %}
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="4"></td>
                    <td class="text-end"><button type="button" id="button-banner-add" data-bs-toggle="tooltip" title="{{ button_banner_add }}" class="btn btn-primary"><i class="fa-solid fa-plus-circle"></i></button></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
          <input type="hidden" name="module_mobile_app_banner_id" value="{{ banner_id }}" id="input-banner-id"/>
        </form>
      </div>
    </div>
  </div>
</div>
