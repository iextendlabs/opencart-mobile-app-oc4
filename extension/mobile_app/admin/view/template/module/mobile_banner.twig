// Initialize existing rows and setup autocomplete + toggle handlers
for (var i = 0; i < image_row; i++) {
  initBannerRow(i);
}

function initBannerRow(row) {
  // Toggle link inputs based on select
  $('#input-image-' + row + '-link-type').on('change', function() {
    var type = $(this).val();
    $('.link-input-external-' + row).hide();
    $('.link-input-product-' + row).hide();
    $('.link-input-category-' + row).hide();
    if (type == 'product') {
      $('.link-input-product-' + row).show();
    } else if (type == 'category') {
      $('.link-input-category-' + row).show();
    } else {
      $('.link-input-external-' + row).show();
    }
  });

  // Product autocomplete
  $('#input-image-' + row + '-product').autocomplete({
    'delay': 500,
    'source': function(request, response) {
      $.ajax({
  url: 'index.php?route=extension/mobile_app/module/mobile_app.product_autocomplete&user_token={{ user_token }}&filter_name=' + encodeURIComponent(request),
        dataType: 'json',
        success: function(json) {
          response($.map(json, function(item) {
            return { label: item.name, value: item.product_id };
          }));
        }
      });
    },
    'select': function(event, ui) {
      // Support both (event, ui) and (item) signatures
      var item = (ui && ui.item) ? ui.item : event;
      if (item) {
        $('#input-image-' + row + '-product-id').val(item.value || item.product_id);
        $(this).val(item.label || item.name);
      }
      return false;
    }
  });

  // Category autocomplete
  $('#input-image-' + row + '-category').autocomplete({
    'delay': 500,
    'source': function(request, response) {
      $.ajax({
  url: 'index.php?route=catalog/category.autocomplete&user_token={{ user_token }}&filter_name=' + encodeURIComponent(request),
        dataType: 'json',
        success: function(json) {
          response($.map(json, function(item) {
            return { label: item.name, value: item.category_id };
          }));
        }
      });
    },
    'select': function(event, ui) {
      // Support both (event, ui) and (item) signatures
      var item = (ui && ui.item) ? ui.item : event;
      if (item) {
        $('#input-image-' + row + '-category-id').val(item.value || item.category_id);
        $(this).val(item.label || item.name);
      }
      return false;
    }
  });
}
