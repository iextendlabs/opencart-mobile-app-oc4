  html += '      <div class="d-grid">';
  html += '        <button type="button" data-oc-toggle="image" data-oc-target="#input-image-' + image_row + '-image" data-oc-thumb="#thumb-image-' + image_row + '" class="btn btn-primary rounded-0"><i class="fa-solid fa-pencil"></i> {{ button_edit|escape('js') }}</button>';
