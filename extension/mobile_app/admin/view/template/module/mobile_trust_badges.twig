{{ header }} {{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <div class="row mb-3">
            <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
            <div class="col-sm-10">
              <div class="form-check form-switch form-switch-lg">
                <input type="hidden" name="module_mobile_app_trust_badges_status" value="0"/>
                <input type="checkbox" name="module_mobile_app_trust_badges_status" value="1" id="input-status" class="form-check-input" {% if module_mobile_app_trust_badges_status %} checked {% endif %}/>
              </div>
            </div>
          </div>

          <div class="table-responsive">
            <table id="trust-badges" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-center"><strong>{{ entry_image }}</strong></td>
                  <td class="text-center"><strong>{{ entry_title }}</strong></td>
                  <td class="text-center"><strong>{{ entry_short_description }}</strong></td>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                {% set badge_row = 0 %}
                {% for trust_badge_item in trust_badges_items %}
                  <tr id="badge-row-{{ badge_row }}">
                    <td class="text-center">
                      <img src="{{ trust_badge_item.thumb }}" alt="" title="" id="thumb-image-{{ badge_row }}" data-oc-placeholder="{{ placeholder }}" class="img-thumbnail mb-2"/>
                      <input type="hidden" name="module_mobile_app_trust_badges_items[{{ badge_row }}][image]" value="{{ trust_badge_item.image }}" id="input-image-{{ badge_row }}"/>
                      <div>
                        <button type="button" data-oc-toggle="image" data-oc-target="#input-image-{{ badge_row }}" data-oc-thumb="#thumb-image-{{ badge_row }}" class="btn btn-primary btn-sm"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>
                        <button type="button" data-oc-toggle="clear" data-oc-target="#input-image-{{ badge_row }}" data-oc-thumb="#thumb-image-{{ badge_row }}" class="btn btn-warning btn-sm"><i class="fa-solid fa-trash-can"></i> {{ button_clear }}</button>
                      </div>
                    </td>
                    <td class="text-center">
                      <input type="text" required name="module_mobile_app_trust_badges_items[{{ badge_row }}][title]" value="{{ trust_badge_item.title }}" placeholder="{{ entry_title }}" class="form-control"/>
                    </td>
                    <td class="text-center">
                      <input type="text" required name="module_mobile_app_trust_badges_items[{{ badge_row }}][short_description]" value="{{ trust_badge_item.short_description }}" placeholder="{{ entry_short_description }}" class="form-control"/>
                    </td>
                    <td class="text-end">
                      <button type="button" onclick="this.parentElement.parentElement.remove();" data-bs-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa-solid fa-minus-circle"></i></button>
                    </td>
                  </tr>
                  {% set badge_row = badge_row + 1 %}
                {% endfor %}
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="3"></td>
                  <td class="text-end">
                    <button type="button" onclick="addBadge();" data-bs-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa-solid fa-plus-circle"></i></button>
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
<script type="text/javascript">
  var badge_row = {{ badge_row }};

  function addBadge() {
    html = '<tr id="badge-row-' + badge_row + '">';
    
    html += '<td class="text-center">';
    html += '  <img src="{{ placeholder }}" alt="" title="" id="thumb-image-' + badge_row + '" data-oc-placeholder="{{ placeholder }}" class="img-thumbnail mb-2"/>';
    html += '  <input type="hidden" name="module_mobile_app_trust_badges_items[' + badge_row + '][image]" value="" id="input-image-' + badge_row + '"/>';
    html += '  <div>';
    html += '    <button type="button" data-oc-toggle="image" data-oc-target="#input-image-' + badge_row + '" data-oc-thumb="#thumb-image-' + badge_row + '" class="btn btn-primary btn-sm"><i class="fa-solid fa-pencil"></i> {{ button_edit }}</button>';
    html += '    <button type="button" data-oc-toggle="clear" data-oc-target="#input-image-' + badge_row + '" data-oc-thumb="#thumb-image-' + badge_row + '" class="btn btn-warning btn-sm"><i class="fa-solid fa-trash-can"></i> {{ button_clear }}</button>';
    html += '  </div>';
    html += '</td>';

    html += '  <td class="text-start"><input type="text" required name="module_mobile_app_trust_badges_items[' + badge_row + '][title]" value="" placeholder="{{ entry_title }}" class="form-control"/></td>';
    html += '  <td class="text-start"><input type="text" required name="module_mobile_app_trust_badges_items[' + badge_row + '][short_description]" value="" placeholder="{{ entry_short_description }}" class="form-control"/></td>';
    html += '  <td class="text-end"><button type="button" onclick="this.parentElement.parentElement.remove();" data-bs-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa-solid fa-minus-circle"></i></button></td>';
    html += '</tr>';

    $('#trust-badges tbody').append(html);

    badge_row++;
  }
</script>
